{
  "name": "radium",
  "version": "0.11.1",
  "description": "A set of tools to manage inline styles on React elements",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/formidablelabs/radium.git"
  },
  "homepage": "https://github.com/formidablelabs/radium",
  "bugs": "https://github.com/formidablelabs/radium/issues",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "dist": "webpack && webpack --config=webpack.config.minified.js",
    "lib": "rm -rf ./lib && babel ./modules -d lib && rm -rf ./lib/__tests__ ./lib/__mocks__",
    "examples": "webpack-dev-server --config examples/webpack.config.js --no-info --content-base examples/",
    "test": "jest",
    "lint": "eslint modules"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=0.12.0 <0.14.0"
  },
  "dependencies": {
    "lodash": "^3.2.0"
  },
  "devDependencies": {
    "babel": "^5.3.3",
    "babel-core": "^5.3.3",
    "babel-loader": "^5.0.0",
    "coveralls": "^2.11.2",
    "eslint": "^0.19.0",
    "jest-cli": "^0.4.0",
    "react": ">=0.12.0 <0.14.0",
    "webpack": "^1.5.3",
    "webpack-dev-server": "^1.7.0"
  },
  "jest": {
    "scriptPreprocessor": "jest/preprocessor.js",
    "testPathDirs": [
      "modules"
    ],
    "collectCoverage": true,
    "collectCoverageOnlyFrom": {
      "modules/get-state.js": true,
      "modules/resolve-styles.js": true,
      "modules/wrap.js": true,
      "modules/wrap-utils.js": true,
      "modules/enhancer.js": true
    },
    "unmockedModulePathPatterns": [
      "lodash",
      "react"
    ]
  }
}
